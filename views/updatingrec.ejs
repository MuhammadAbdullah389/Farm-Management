<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Record</title>
    <link rel="stylesheet" href="/styles/home.css">
</head>
<body>
    <header>
        <h2>Update Entry for <%= entry.date %></h2>
    </header>

    <nav>
        <ul>
            <li><a href="/">Dashboard</a></li>
            <li><a href="/view">View Records</a></li>
            <li><a href="/contact">Contact the Developer</a></li>
            <li><a href="/getmonths">Get Reports</a></li>
        </ul>
    </nav>

    <form action="/update/<%= postingDate %>" method="POST">
        <div>
            <label for="morningMilk">Morning Milk Quantity:</label>
            <input type="number" id="morningMilk" name="morningMilk" value="<%= entry.morningMilkQuantity %>" required>
        </div>

        <div>
            <label for="eveningMilk">Evening Milk Quantity:</label>
            <input type="number" id="eveningMilk" name="eveningMilk" value="<%= entry.eveningMilkQuantity %>" required>
        </div>

        <div id="expenseContainer">
            <h3>Expenses</h3>
            <% entry.expenses.forEach(function(expense, index) { %>
                <div class="expenseItem">
                    <label for="expenseName<%= index %>">Expense Name:</label>
                    <input type="text" name="expenses[<%= index %>][description]" value="<%= expense.description %>" required>

                    <label for="expenseAmount<%= index %>">Expense Amount:</label>
                    <input type="number" name="expenses[<%= index %>][amount]" value="<%= expense.amount %>" required>
                </div>
            <% }); %>
        </div>
        <button type="button" id="addExpenseButton">Add Expense</button>

        <div id="revenueContainer">
            <h3>Revenues</h3>
            <% entry.revenues.forEach(function(revenue, index) { %>
                <div class="revenueItem">
                    <label for="revenueSource<%= index %>">Revenue Source:</label>
                    <input type="text" name="revenues[<%= index %>][description]" value="<%= revenue.description %>" required>

                    <label for="revenueAmount<%= index %>">Revenue Amount:</label>
                    <input type="number" name="revenues[<%= index %>][amount]" value="<%= revenue.amount %>" required>
                </div>
            <% }); %>
        </div>
        <button type="button" id="addRevenueButton">Add Revenue</button>

        <button type="submit">Update Record</button>
    </form>

    <script src="/scripts/updatingrec.js"></script>
</body>
</html>
